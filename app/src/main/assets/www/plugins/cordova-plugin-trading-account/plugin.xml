<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="cordova-plugin-trading-account"
        version="1.0.0">
    
    <name>Trading Account Plugin</name>
    <description>Cordova plugin for trading account purchase functionality</description>
    <license>Apache 2.0</license>
    <keywords>cordova,trading,account,purchase,billing</keywords>
    
    <js-module src="www/trading-account.js" name="TradingAccount">
        <clobbers target="TradingAccount" />
    </js-module>
    
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="TradingAccount">
                <param name="android-package" value="com.futureharvest.vproptrader.TradingAccountPlugin" />
            </feature>
        </config-file>
        
        <source-file src="src/android/TradingAccountPlugin.java" target-dir="src/com/futureharvest/vproptrader" />
        
        <uses-permission android:name="com.android.vending.BILLING" />
    </platform>
    
    <platform name="ios">
        <!-- iOS implementation would go here -->
    </platform>
    
</plugin>
